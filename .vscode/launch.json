{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Debate Server (gdb)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/cppserver/build/bin/debate_server.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/cppserver",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "C:/mingw-w64/mingw64/bin/gdb.exe",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "CMake Build (Debug)"
    },
    {
      "name": "Run Debate Server (no debug)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/cppserver/build/bin/debate_server.exe",
      "args": [],
      "cwd": "${workspaceFolder}/cppserver",
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "C:/mingw-w64/mingw64/bin/gdb.exe",
      "preLaunchTask": "CMake Build (Debug)",
      "stopAtEntry": false,
      "internalConsoleOptions": "neverOpen"
    }
  ]
