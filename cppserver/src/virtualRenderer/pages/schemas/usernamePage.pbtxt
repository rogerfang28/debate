page_id: "enter_username"
title: "Enter Username"

components {
  id: "main"
  type: CONTAINER
  style { custom_class: "min-h-screen bg-gray-900 text-white p-8 flex flex-col items-center justify-center gap-6" }

  children {
    id: "title"
    type: TEXT
    text: "Welcome!"
    style { custom_class: "text-3xl font-bold text-blue-400" }
  }

  children {
    id: "description"
    type: TEXT
    text: "Please enter your username to continue."
    style { custom_class: "text-gray-300 text-center" }
  }

  children {
    id: "usernameInput"
    type: INPUT
    name: "username"
    value: ""
    style { custom_class: "w-full max-w-sm p-3 rounded bg-gray-800 text-white border border-gray-600" }
    attributes { key: "placeholder" value: "Enter your username..." }
    events {
      key: "onEnter"
      value: "{\"actionId\":\"submitUsername\",\"collectFrom\":[\"usernameInput\"]}"
    }
  }

  children {
    id: "submitButton"
    type: BUTTON
    text: "Submit"
    name: "submit"
    style { custom_class: "px-6 py-3 bg-green-600 hover:bg-green-500 text-white rounded-lg transition" }
    events {
      key: "onClick"
      value: "{\"actionId\":\"submitUsername\",\"collectFrom\":[\"usernameInput\"]}"
    }
  }
}
