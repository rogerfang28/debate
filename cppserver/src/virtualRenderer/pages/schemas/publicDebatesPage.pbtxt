page_id: "publicDebates"
title: "DebateGraph - Public Debates"

components {
  id: "navbar"
  type: CONTAINER
  style { custom_class: "flex justify-between items-center p-4 bg-gray-900 text-white border-b border-gray-700" }

  children {
    id: "navLeft"
    type: CONTAINER
    style { custom_class: "flex items-center gap-4" }

    children {
      id: "btnBack"
      type: BUTTON
      text: "‚Üê Home"
      style { custom_class: "text-blue-400 hover:bg-blue-400/10 px-3 py-2 rounded-lg transition-colors border-none bg-transparent" }
    }

    children {
      id: "pageTitle"
      type: TEXT
      text: "üåç Public Debates"
      style { custom_class: "text-xl font-semibold bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent" }
    }
  }

  children {
    id: "navRight"
    type: CONTAINER
    style { custom_class: "flex items-center gap-2" }

    children {
      id: "btnProfile"
      type: BUTTON
      text: "üë§ Profile"
      style { custom_class: "px-3 py-2 bg-gray-700 hover:bg-gray-600 rounded-lg transition-colors text-sm" }
    }

    children {
      id: "btnLogout"
      type: BUTTON
      text: "üö™ Logout"
      style { custom_class: "px-3 py-2 bg-red-600 hover:bg-red-500 rounded-lg transition-colors text-sm" }
    }
  }
}

components {
  id: "mainContent"
  type: CONTAINER
  style { custom_class: "max-w-7xl mx-auto p-6" }

  # Header Section
  children {
    id: "headerSection"
    type: CONTAINER
    style { custom_class: "text-center mb-8" }

    children {
      id: "pageHeading"
      type: TEXT
      text: "üåç Explore Public Debates"
      style { custom_class: "text-3xl font-bold text-white mb-4" }
    }

    children {
      id: "pageDescription"
      type: TEXT
      text: "Join ongoing debates or start watching public discussions"
      style { custom_class: "text-lg text-gray-400" }
    }
  }

  # Search and Filter Section
  children {
    id: "searchSection"
    type: CONTAINER
    style { custom_class: "mb-8" }

    children {
      id: "searchForm"
      type: FORM
      name: "searchForm"
      style { custom_class: "flex gap-4 max-w-2xl mx-auto" }

      children {
        id: "searchInput"
        type: INPUT
        text: "Search debates..."
        name: "search"
        style { custom_class: "flex-1 p-3 bg-gray-800 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-transparent" }
      }

      children {
        id: "btnSearch"
        type: BUTTON
        text: "üîç Search"
        style { custom_class: "px-6 py-3 bg-blue-600 hover:bg-blue-500 text-white font-medium rounded-lg transition-colors" }
      }
    }
  }

  # Loading State
  children {
    id: "loadingState"
    type: CONTAINER
    style { custom_class: "hidden text-center py-12" }

    children {
      id: "loadingSpinner"
      type: TEXT
      text: "üîÑ Loading debates..."
      style { custom_class: "text-lg text-gray-400" }
    }
  }

  # Error State
  children {
    id: "errorState"
    type: CONTAINER
    style { custom_class: "hidden bg-red-500/10 border border-red-500/30 rounded-lg p-6 text-center" }

    children {
      id: "errorMessage"
      type: TEXT
      text: "Failed to load debates"
      style { custom_class: "text-red-300 font-medium" }
    }
  }

  # Debates Grid
  children {
    id: "debatesGrid"
    type: CONTAINER
    style { custom_class: "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mb-8" }

    children {
      id: "debateCard1"
      type: CARD
      style { custom_class: "bg-gray-800 border border-gray-700 hover:border-gray-600 rounded-lg overflow-hidden transition-all hover:transform hover:scale-105 cursor-pointer" }

      children {
        id: "cardHeader1"
        type: CONTAINER
        style { custom_class: "p-4 border-b border-gray-700" }

        children {
          id: "cardTitle1"
          type: TEXT
          text: "Climate Change Solutions"
          style { custom_class: "font-semibold text-white text-lg mb-2" }
        }

        children {
          id: "cardMeta1"
          type: TEXT
          text: "üë• 12 participants ‚Ä¢ üïí Active"
          style { custom_class: "text-sm text-gray-400" }
        }
      }

      children {
        id: "cardContent1"
        type: CONTAINER
        style { custom_class: "p-4" }

        children {
          id: "cardDescription1"
          type: TEXT
          text: "Discussing various approaches to combat climate change and their effectiveness..."
          style { custom_class: "text-gray-300 text-sm mb-3" }
        }

        children {
          id: "cardTags1"
          type: TEXT
          text: "#climate #environment #policy"
          style { custom_class: "text-xs text-blue-400" }
        }
      }
    }

    children {
      id: "debateCard2"
      type: CARD
      style { custom_class: "bg-gray-800 border border-gray-700 hover:border-gray-600 rounded-lg overflow-hidden transition-all hover:transform hover:scale-105 cursor-pointer" }

      children {
        id: "cardHeader2"
        type: CONTAINER
        style { custom_class: "p-4 border-b border-gray-700" }

        children {
          id: "cardTitle2"
          type: TEXT
          text: "AI Ethics & Society"
          style { custom_class: "font-semibold text-white text-lg mb-2" }
        }

        children {
          id: "cardMeta2"
          type: TEXT
          text: "üë• 8 participants ‚Ä¢ üïí Active"
          style { custom_class: "text-sm text-gray-400" }
        }
      }

      children {
        id: "cardContent2"
        type: CONTAINER
        style { custom_class: "p-4" }

        children {
          id: "cardDescription2"
          type: TEXT
          text: "Exploring the ethical implications of artificial intelligence in modern society..."
          style { custom_class: "text-gray-300 text-sm mb-3" }
        }

        children {
          id: "cardTags2"
          type: TEXT
          text: "#ai #ethics #technology"
          style { custom_class: "text-xs text-blue-400" }
        }
      }
    }

    children {
      id: "debateCard3"
      type: CARD
      style { custom_class: "bg-gray-800 border border-gray-700 hover:border-gray-600 rounded-lg overflow-hidden transition-all hover:transform hover:scale-105 cursor-pointer" }

      children {
        id: "cardHeader3"
        type: CONTAINER
        style { custom_class: "p-4 border-b border-gray-700" }

        children {
          id: "cardTitle3"
          type: TEXT
          text: "Future of Education"
          style { custom_class: "font-semibold text-white text-lg mb-2" }
        }

        children {
          id: "cardMeta3"
          type: TEXT
          text: "üë• 15 participants ‚Ä¢ üïí Active"
          style { custom_class: "text-sm text-gray-400" }
        }
      }

      children {
        id: "cardContent3"
        type: CONTAINER
        style { custom_class: "p-4" }

        children {
          id: "cardDescription3"
          type: TEXT
          text: "How should education evolve to meet the needs of the 21st century?"
          style { custom_class: "text-gray-300 text-sm mb-3" }
        }

        children {
          id: "cardTags3"
          type: TEXT
          text: "#education #future #society"
          style { custom_class: "text-xs text-blue-400" }
        }
      }
    }
  }

  # Pagination
  children {
    id: "pagination"
    type: CONTAINER
    style { custom_class: "flex justify-center items-center gap-2" }

    children {
      id: "btnPrevPage"
      type: BUTTON
      text: "‚Üê Previous"
      style { custom_class: "px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-lg transition-colors disabled:opacity-50" }
    }

    children {
      id: "pageInfo"
      type: TEXT
      text: "Page 1 of 5"
      style { custom_class: "px-4 py-2 text-gray-400" }
    }

    children {
      id: "btnNextPage"
      type: BUTTON
      text: "Next ‚Üí"
      style { custom_class: "px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-lg transition-colors" }
    }
  }

  # Empty State
  children {
    id: "emptyState"
    type: CONTAINER
    style { custom_class: "hidden text-center py-12" }

    children {
      id: "emptyIcon"
      type: TEXT
      text: "üîç"
      style { custom_class: "text-6xl mb-4" }
    }

    children {
      id: "emptyTitle"
      type: TEXT
      text: "No debates found"
      style { custom_class: "text-xl font-semibold text-gray-300 mb-2" }
    }

    children {
      id: "emptyDescription"
      type: TEXT
      text: "Try adjusting your search terms or browse all debates"
      style { custom_class: "text-gray-400" }
    }
  }
}
